<div class="row comment-item" data-id="{{_id}}" data-add="false" data-open="false">
    <h3>{{ author }}</h3>
    <p>{{ content }}</p>

    <div><a class="like {{toggleLike}}">Like:</a> <span class="numLikes">{{numLikes}}</span> <a class="dislike {{toggleDislike}}">Dislike:</a> <span class="numDislikes">{{numDislikes}}</span> Comment Data: {{commentDate}}</div>
    
    <a class="addReply">Add a reply</a>
    <a class="seeReply" data-id="{{_id}}">See replies</a>

    <div id ="reply-form-area"> 
    </div>

    <div id ="list-replies-area">
    </div>
</div>

